<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageViewbackgroundBanner"
        android:layout_width="match_parent"
        android:layout_height="280dp"
      />

    <View
        android:background="@drawable/custombackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="280dp" />

    <RelativeLayout
        android:layout_alignBottom="@id/imageViewbackgroundBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp"
            android:id="@+id/imageViewbanner"
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_alignTop="@id/imageViewbanner"
            android:layout_toRightOf="@+id/imageViewbanner"
            android:id="@+id/textViewtitle"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <RelativeLayout
            android:layout_toRightOf="@id/imageViewbanner"
            android:layout_below="@id/textViewtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"

            >

            <TextView
                android:textColor="#FFFFFF"
                android:id="@+id/textViewnoidung"
                android:textSize="13dp"
                android:maxLines="2"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chào mừng các bạn đến với liveshow của tùng" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>