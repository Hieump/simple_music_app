<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:layout_margin="10dp"
            android:id="@+id/textViewplaynhacindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            android:textColor="#ffff"
            android:textSize="17dp"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/textViewplaynhacindex"
            android:id="@+id/textViewplaynhactenbaihat"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten ca khuc" />

        <TextView
            android:textColor="#ffff"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_toRightOf="@+id/textViewplaynhacindex"
            android:layout_below="@id/textViewplaynhactenbaihat"
            android:id="@+id/textViewplaynhactencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ca si" />
    </RelativeLayout>
</RelativeLayout>